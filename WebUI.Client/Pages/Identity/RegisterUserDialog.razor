<EditForm Model="@_registerRequest" OnValidSubmit="SubmitAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator"/>
    <MudDialog>
        <TitleContent>
            @{
                <MudText Typo="Typo.h6">
                    <MudIcon Icon="@Icons.Material.Filled.VerifiedUser" Class="mr-3 mb-n1" />
                    Регистрация нового пользователя
                </MudText>
            }
        </TitleContent>
        <DialogContent>
            <MudTextField For="@(() => _registerRequest.FullName)" @bind-Value="_registerRequest.FullName" Label="Полное имя" />
            <MudTextField For="@(() => _registerRequest.Email)" InputType="InputType.Email" @bind-Value="_registerRequest.Email" Label="Email" />
            <MudTextField For="@(() => _registerRequest.Password)" InputType="@_passwordInput" Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="TogglePasswordVisibility" @bind-Value="_registerRequest.Password" Label="Пароль" />
            <MudTextField For="@(() => _registerRequest.ConfirmPassword)" InputType="InputType.Password" @bind-Value="_registerRequest.ConfirmPassword" Label="Повторите пароль" />
            <MudTextField For="@(() => _registerRequest.PhoneNumber)" @bind-Value="_registerRequest.PhoneNumber" Label="Номер телефона" />
        </DialogContent>
        <DialogActions>
            <MudButton Variant="Variant.Filled" OnClick="Cancel">Назад</MudButton>
            @{
                <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success">Зарегистрировать</MudButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>

